{
    "experiment_entry_point": "ppnmt_experiment",
    "wandb_project": "ppnmt",
    "verbosity": "quiet",
    "device": "mps",
    "batch_size": 200,  
    "worker_count": 1,
    
    "hyperparameters" : {
    
        "num_samples": 1,
        "sample": false,
        "decay": true,
        
